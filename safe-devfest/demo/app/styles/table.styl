//
// Tables
// --------------------------------------------------

table
  max-width 100%
  border-collapse collapse
  border-spacing 0
  // Cells
  th
  td
    padding 12px 8px
    line-height baseLineHeight
    text-align left
    vertical-align top
  th
    font-weight bold
  // Bottom align for column headings
  thead th
    vertical-align bottom

.table-striped
  tbody
    > tr:nth-child(odd) > td
    > tr:nth-child(odd) > th
      background-color: tableBackgroundAccent

.table-block
  width 100%