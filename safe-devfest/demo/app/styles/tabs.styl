.tabs
	float left
	width 100%
	border-bottom 3px solid #FACE13
	position relative
	z-index 1

	li
		float left
		margin-left 10px

		a
			font-weight bold
			display block
			border 1px solid #dedede
			padding 8px 15px
			border-bottom 0
			background-color #ffffff
			box-shadow inset 0 1px 1px #fff
			border-radius 3px 3px 0px 0px
			gradient-horizontal(#ffffff, #f0f0f0)
			text-shadow none
			color #3c75c1

			&:hover
				activeButtonHover()

	.active
		a
			color #7b4d04
			border 1px solid #face0f
			border-bottom 0
			gradient-horizontal(#ffe955, #facf11)
			box-shadow inset 0 1px 1px #fff
			border-radius 3px 3px 0px 0px
			text-shadow 1px 1px 0px #fded0f
			text-decoration none
			&:hover
				gradient-horizontal(#ffe955, #facf11)
				border 1px solid #face0f
				border-bottom 0
