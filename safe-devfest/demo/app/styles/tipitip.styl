borderColor = #8598aa

.tipitip
    max-width 250px
    position absolute
    border 3px solid borderColor
    background-color #FFF
    border-radius 2px
    padding 9px 14px 12px
    font-size 11px
    color #5a5a5a
    z-index 99
    line-height 14px
    box-shadow 2px 2px 0 #dfdfdf
    word-wrap break-word

    &:after
        border solid transparent
        border-width 12px
        position absolute
        content " "
        height 0
        width 0
        pointer-events none

    p
        margin 0

/* Arrow Align */
.tt-north-west
.tt-south-west
    margin-left -15px

.tt-north-east
.tt-south-east
    margin-left 15px

/* North Styles */
.tt-north-west:after
    top 100%
    left 10px

.tt-north:after
    top 100%
    left 50%
    margin 0 0 0 -12px

.tt-north-east:after
    top 100%
    right 10px

.tt-north-west:after
.tt-north:after
.tt-north-east:after
    border-top-color borderColor

/* South Styles */
.tt-south-west:after
    bottom 100%
    left 10px

.tt-south:after
    bottom 100%
    left 50%
    margin 0 0 0 -12px

.tt-south-east:after
    bottom 100%
    right 10px

.tt-south-west:after
.tt-south:after
.tt-south-east:after
    border-bottom-color borderColor

/* West and East Styles */
.tt-west:after
    left 100%
    top 50%
    margin-top -12px
    border-left-color borderColor

.tt-east:after
    right 100%
    top 50%
    margin-top -12px
    border-right-color borderColor

/* Target Container */
.tipitip-target
    display none
